# Telegram Bot Configuration
# Get your bot token from @BotFather on Telegram
BOT_TOKEN=your_bot_token_here

# Chat IDs to send notifications to
# For single chat: CHAT_ID=123456789
# For multiple chats (comma-separated): CHAT_ID=123456789,-1001234567890
# To find chat IDs: Run `python main.py` after adding the bot to your chat/group
# Note: Group chat IDs typically start with -100
CHAT_ID=your_chat_id_here

# Prize threshold in SGD (only send notification if prize is above this amount)
PRIZE_THRESHOLD=8000000
